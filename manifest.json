{
  "manifest_version": 2,
  "name": "YouTube Quick Downloader",
  "version": "1.0.0",
  "description": "Adds a red download button under YouTube videos for quick audio or 360p downloads.",
  "permissions": [
    "downloads"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "png1.png",
    "128": "png1.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "yt-quick-download@example.com"
    }
  }
}
